<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kazmik.andro.onlinedbtest.UpdateEntry">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_below="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="Update Entry"
                android:textSize="25dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ff000aff"
                android:id="@+id/textViewue2" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name : "
                android:id="@+id/tvuename"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/textViewue2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etuename"
                android:hint="Enter Name"
                android:layout_above="@+id/tvueclass"
                android:layout_toRightOf="@+id/tvueclass"
                android:layout_marginLeft="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Class  : "
                android:id="@+id/tvueclass"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tvuename"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sueclass"
                android:layout_below="@+id/etuename"
                android:layout_alignLeft="@+id/etuename"
                android:layout_alignStart="@+id/etuename" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Batch  :"
                android:id="@+id/textViewue4"
                android:layout_alignBottom="@+id/etuebatch"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="Joining Year"
                android:id="@+id/etuebatch"
                android:layout_below="@+id/sueclass"
                android:layout_alignLeft="@+id/sueclass"
                android:layout_alignStart="@+id/sueclass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Blood Group  : "
                android:id="@+id/tvuebg"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/textViewue4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/suebg"
                android:layout_below="@+id/etuebatch"
                android:layout_toRightOf="@+id/tvuebg"
                android:layout_marginTop="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mobile : "
                android:id="@+id/tvuemob"
                android:layout_below="@+id/suebg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:hint="Mobile number"
                android:id="@+id/etuemob"
                android:layout_below="@+id/suebg"
                android:layout_alignLeft="@+id/etuebatch"
                android:layout_alignStart="@+id/etuebatch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address : "
                android:id="@+id/tvueaddr"
                android:layout_below="@+id/tvuemob"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="23dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etueaddr"
                android:hint="Address"
                android:layout_alignBottom="@+id/tvueaddr"
                android:layout_alignLeft="@+id/etuemob"
                android:layout_alignStart="@+id/etuemob" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Last Donated On : "
                android:id="@+id/tvuelastdon"
                android:layout_below="@+id/tvueaddr"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/etuelastdon"
                android:hint="YYYY-MM-DD"
                android:layout_alignBottom="@+id/tvuelastdon"
                android:layout_alignRight="@+id/etueaddr"
                android:layout_alignEnd="@+id/etueaddr"
                android:layout_toRightOf="@+id/tvuelastdon" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:id="@+id/buesubmit"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/etuelastdon"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
